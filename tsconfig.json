{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~": ["src/index.ts"],
      "~/*": ["./src/*"],
      "@": ["src/index.ts"],
      "@/*": ["./src/*"]
    },
    "sourceMap": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxFactory": "DOM.hydrate",
    "lib": [
      "dom",
      "esnext"
    ],
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "plugins": [
      {"name": "typescript-lit-html-plugin"}
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "webpack"
  ]
}
